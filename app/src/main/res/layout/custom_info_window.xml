<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/gosparringlogo"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_info_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nama Team" />

            <TextView
                android:id="@+id/tv_info_asal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_info_nama"
                android:layout_alignStart="@+id/tv_info_nama"
                android:layout_below="@+id/tv_info_nama"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="Asal Team" />

            <TextView
                android:id="@+id/tv_info_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_info_asal"
                android:layout_alignStart="@+id/tv_info_asal"
                android:layout_below="@+id/tv_info_asal"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="Point" />

            <TextView
                android:id="@+id/tv_info_statistik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_info_point"
                android:layout_alignStart="@+id/tv_info_point"
                android:layout_below="@+id/tv_info_point"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="M : 3 | S : 2 | K : 1" />

            <Button
                android:id="@+id/btnAjakDuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorAccent"
                android:text="AJAK DUEL"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>