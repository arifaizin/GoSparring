<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_item_background"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="75dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lapangan"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="172dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="75dp"
                android:alpha="50"
                android:background="@drawable/transparanhitam"
                android:orientation="vertical"
                android:visibility="visible">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_skorA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="100sp"
                    android:textStyle="bold"
                    tools:text="3" />

                <TextView
                    android:id="@+id/tv_item_strip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="100sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="-"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_item_skorB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="100sp"
                    android:textStyle="bold"
                    tools:text="3" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_lapangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="54dp"
                android:maxLines="2"
                android:text="Baking App"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="Nama Lapangan" />

            <TextView
                android:id="@+id/tv_item_hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="32dp"
                android:maxLines="2"
                android:text="Sabtu, 9 September 2017"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_iten_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="8dp"
                android:maxLines="2"
                android:text="Jam 08.00-09.00"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_item_teamA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_item_teamB"
                    app:layout_constraintRight_toLeftOf="@+id/button"
                    tools:text="Team 1" />

                <TextView
                    android:id="@+id/tv_item_kotaA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_item_kotaB"
                    app:layout_constraintRight_toRightOf="@+id/tv_item_teamA"
                    tools:text="Kota 1" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/lingkaran"
                    android:text="vs"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_item_teamB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@+id/button"
                    app:layout_constraintTop_toTopOf="@+id/button"
                    tools:text="Team 2" />

                <TextView
                    android:id="@+id/tv_item_kotaB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_item_teamB"
                    app:layout_constraintTop_toBottomOf="@+id/tv_item_teamB"
                    tools:text="Kota2" />

            </android.support.constraint.ConstraintLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>